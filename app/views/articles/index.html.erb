<h2 align="center">Listing all articles</h2>
<div class="container-fluid">
	<% @articles.each do |t| %>
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2">
				<div class="well well-lg">
					<div class="article-title">
						<%= link_to(t.title, article_path(t)) %>
					</div>
					<td><%= t.description %></td>
					<td><%= link_to "Show", article_path(t) %></td>
					<td><%= link_to "Edit", edit_article_path(t) %></td>
					<td><%= link_to "Delete", article_path(t), method: :delete, data: {confirm: "Are you sure?"} %></td>
				</div>
			</div>
		</div>
	<% end %>	
</div>

<%= link_to('Back to Homepage', root_path) %>