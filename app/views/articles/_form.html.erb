<%= render 'shared/errors', obj: @article %>

<div class="container">
	<%= form_for(@article, :html => {class: "form"})  do |f| %>
	<div class="form-group">			
		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
	</div>
	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article Content" %>
	</div>

	<%= f.submit class: 'btn btn-primary btn-lg' %>

	<% end %>

	<%= link_to "Cancel", articles_path, class: "btn btn-primary btn-lg", id: "bottom-button" %>
	
</div>