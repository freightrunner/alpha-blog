<div class="container-fluid">
	<h1 align="center">Welcome to <%= @user.username %>'s Profile</h1>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center">
			<%= gravatar_for(@user, size: 150) %>
		</div>
	</div>
	<div class="row">
		<div class="col-md-4 col-md-offset-4 center">
			<h4><%= @user.email %></h4>
		</div>
	</div>
	<div class="row">
		<h3 align="center"><%= @user.username %>'s Articles:</h3>
	</div>
	<div align="center">
		<%= will_paginate @user_articles %>
	</div>
	<%= render 'articles/article', obj: @user_articles %>
	<div align="center">
		<%= will_paginate @user_articles %>
	</div>
</div>

